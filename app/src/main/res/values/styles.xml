<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Ripple related styles -->
    <style name="RippleStyle">
        <item name="rippleOverlay">true</item>
        <item name="rippleCol">@color/main_color_grey_300</item>
        <item name="rippleAlpha">0.7</item>
        <item name="rippleDimension">45dp</item>
        <item name="rippleHover">true</item>
        <item name="rippleDuration">200</item>
        <item name="rippleFadeDuration">50</item>
        <item name="rippleBackground">@android:color/transparent</item>
        <item name="rippleDelayClick">true</item>
        <item name="ripplePersistent">false</item>
        <item name="rippleInAdapter">false</item>
    </style>
    <style name="ImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/cd_main_image</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <!-- <item name="android:paddingBottom">8dp</item> -->
        <item name="android:paddingRight">4dp</item>
        <item name="android:cropToPadding">true</item>
    </style>

    <style name="TextViewAppearance.Body1" parent="@style/TextViewAppearance">
        <item name="typeface">robotoMedium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_color_grey_600</item>
    </style>

    <style name="button_style1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:text">@string/add_button_text</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_style2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:text">@string/cancel_button_text</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_image_delete">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:text">@string/delete_image_button_text</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_style3">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:text">@string/save_button_text</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="button_style4">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:text">@string/publish_button_text</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">18sp</item>

    </style>

    <!-- ListView related themes -->
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>


</resources>
